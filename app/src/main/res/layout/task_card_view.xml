<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="12dp"
    app:cardCornerRadius="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="13dp"
    app:cardBackgroundColor="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/TaskCard">

        <TextView
            android:id="@+id/task_incentive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="12dp"
            android:paddingStart="16dp"
            android:textStyle="bold"
            tools:text="5000 Points" />

        <TextView
            android:id="@+id/task_start_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/task_incentive"
            android:paddingStart="16dp"
            tools:text="Start: Start Lane" />

        <TextView
            android:id="@+id/task_end_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/task_start_location"
            android:paddingStart="16dp"
            tools:text="End: End Avenue" />


        <TextView
            android:id="@+id/task_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/task_end_location"
            android:layout_above="@id/task_more_info_button"
            android:paddingStart="16dp"
            tools:text="Duration estimate: 37 minutes"/>



        <Button
            android:id="@+id/task_accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            style="@style/ButtonColored"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/white"
            android:text="ACCEPT"/>

        <Button
            android:id="@+id/task_dismiss_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/task_accept_button"
            style="@style/ButtonColored"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/white"
            android:text="DISMISS"/>

        <Button
            android:id="@+id/task_more_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            style="@style/ButtonFlat"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/white"
            android:text="MORE INFO"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ColoredButton">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ColoredButton.Blue">
        <item name="colorAccent">@color/colorBlueDark</item>
    </style>
    <style name="ColoredButton.Green">
        <item name="colorAccent">@color/colorGreenDark</item>
    </style>

    <style name="SingleLineText">
        <item name="android:singleLine">true</item>
        <!--android:maxLines can cause crashes with ellipses-->
    </style>

    <style name="TaskCard">
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="colorAccent">@color/colorGreenDark</item>
    </style>

    <style name="TaskDetails">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textViewStyle">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonColored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="ButtonFlat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">15sp</item>
    </style>

</resources>
